<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  	<servlet>
		<servlet-name>Jersey REST Service</servlet-name>
		 <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class> 
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>com.revature.logic,com.revature.pojo,com.jersey.jaxb,com.fasterxml.jackson.jaxrs.json</param-value>
		</init-param>
<!-- 		<init-param>
			<param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
			<param-value>true</param-value>
		</init-param> -->
		<load-on-startup>1</load-on-startup>
	</servlet>
	
  <servlet>
  	<servlet-name>RegisterUserServlet</servlet-name>
  	<display-name>RegisterUserServlet</display-name>
  	<description></description>
  	<servlet-class>com.revature.servlets.RegisterUserServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>LoginUserServlet</servlet-name>
  	<display-name>LoginUserServlet</display-name>
  	<description></description>
  	<servlet-class>com.revature.servlets.LoginUserServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>MainMenuServlet</servlet-name>
  	<display-name>MainMenuServlet</display-name>
  	<description></description>
  	<servlet-class>com.revature.servlets.MainMenuServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>UpdateUserServlet</servlet-name>
  	<display-name>UpdateUserServlet</display-name>
  	<description></description>
  	<servlet-class>com.revature.servlets.UpdateUserServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>SendRequestServlet</servlet-name>
  	<display-name>SendRequestServlet</display-name>
  	<description></description>
  	<servlet-class>com.revature.servlets.SendRequestServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ApproveRequestServlet</servlet-name>
  	<display-name>ApproveRequestServlet</display-name>
  	<description></description>
  	<servlet-class>com.revature.servlets.ApproveRequestServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>RejectRequestServlet</servlet-name>
  	<display-name>RejectRequestServlet</display-name>
  	<description></description>
  	<servlet-class>com.revature.servlets.RejectRequestServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ViewEmployeeRequestsServlet</servlet-name>
  	<display-name>ViewEmployeeRequestsServlet</display-name>
  	<description></description>
  	<servlet-class>com.revature.servlets.ViewEmployeeRequestsServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>RegisterUserServlet</servlet-name>
  	<url-pattern>/RUS</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LoginUserServlet</servlet-name>
  	<url-pattern>/LUS</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>MainMenuServlet</servlet-name>
  	<url-pattern>/MMS</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>UpdateUserServlet</servlet-name>
  	<url-pattern>/UUS</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>SendRequestServlet</servlet-name>
  	<url-pattern>/SRS</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ApproveRequestServlet</servlet-name>
  	<url-pattern>/ARS</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>RejectRequestServlet</servlet-name>
  	<url-pattern>/RRS</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ViewEmployeeRequestsServlet</servlet-name>
  	<url-pattern>/VERS</url-pattern>
  </servlet-mapping>
  	<servlet-mapping>
		<servlet-name>Jersey REST Service</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>

  <error-page>
   <error-code>404</error-code>
   <location>/error.jsp</location>
   </error-page>
   <error-page>
   <exception-type>java.lang.NullPointerException</exception-type>
   <location>/login.jsp</location>
   </error-page>
    <error-page>
   <exception-type>java.lang.NumberFormatException</exception-type>
   <location>/index.jsp</location>
   </error-page>
</web-app>
